{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020"
    ],
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src",
    "test"
  ]
}